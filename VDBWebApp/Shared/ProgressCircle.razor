<div class="loading-overlay">
    <svg class="loading-progress" viewBox="0 0 100 100">
        <circle cx="50" cy="50" r="45" class="loading-bg"></circle>
        <circle cx="50" cy="50" r="45" class="loading-animate"></circle>
    </svg>
    <img src="@LoadingImageUrl" alt="Loading..." class="loading-image-centered" />
</div>


@code {
    [Parameter]
    public string LoadingImageUrl { get; set; } = "images/LogoVDB.gif"; // Path default ke gambar loading

}