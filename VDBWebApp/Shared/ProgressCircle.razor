<div class="custom-loading-overlay">
    <div class="custom-loading-wrapper">
        <svg class="custom-loading-progress" viewBox="0 0 100 100">
            <circle cx="50" cy="50" r="45" class="custom-loading-bg"></circle>
            <circle cx="50" cy="50" r="45" class="custom-loading-animate"></circle>
        </svg>
        <img src="@LoadingImageUrl" alt="Loading..." class="custom-loading-image" />
    </div>
</div>

@code {
    [Parameter]
    public string LoadingImageUrl { get; set; } = "images/LogoVDB.gif"; // Path default ke gambar loading

}

